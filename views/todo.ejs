<body>
		<div class="container-fluid">
			
		<a class="git_link text-right" href="https://github.com/attaab/Payporte" target="_blank"><i class="fa fa-github"></i></a>

		</div>
	<h1>Payporte</h1>
  <div id="todo-table">
		<!-- form for adding items -->
		
		<form id="main-form" action="/todo" method="post" autocomplete="off">
			<input id="write" type="text" name="item" placeholder="Make a list full of JOY 😇😏😚😂😁" required>
			<button type="submit">Add item</button>
		</form>

		<div class="container">
			<div class="row">
			<!-- html for to-do items -->
				<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
						<br>
						<br>
						<h4>Pending Tasks</h4>
					<ul class="drop">
						  <% for(i = 0; i < todos.length; i++) {%>
						  	<form class="update-form" id="updateForm<%=[i]%>" method="post" action="/todo/edit/<%=todos[i]._id%>">
						  		<input id="input<%=[i]%>" type="text" name="item" value="<%=todos[i].item%>" required="required">
						  		<button type="submit">Edit</button>
						  	</form>

						      <li class="drag" href="/todo/<%=todos[i]._id%>"><%=todos[i].item%><span class="delete">X</span></li>
						  <% } %>
				   </ul>
				</div>
					<!-- end of items to do -->
				<div class="col-lg-2 col-md-2 col-sm-2 col-xs-2">
					
				</div>
					<!-- html for done items -->
					<div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 ">
				<br>
						<br>
						<h4>Done Tasks</h4>
					<ul class="drop">
						<% for(i = 0; i < doneTask.length; i++) {%>
							<li href="<%=doneTask[i]._id%>" class="drag done done-tasks"><%=doneTask[i].item%><span class="delete_done">X</span></li>
						<% } %>
					</ul>
				</div>
				<!--end of html for done items -->
			</div>
		</div>
		
		<!-- this is where items are added on the page-->
		   
		<!-- end of where items are added on the page -->
  </div>

	 <script type="text/javascript" src="/assets/plugins/jquery.js"></script>
	 <script type="text/javascript" src="/assets/plugins/jquery-ui.js"></script>
